<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_background">

        <GridView
            android:id="@+id/project_list_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:numColumns="2"
            android:layout_above="@+id/project_list_add_button"
            android:layout_marginLeft="@dimen/external_half_half_margin"
            android:layout_marginRight="@dimen/external_half_half_margin">
        </GridView>

        <Button
            android:id="@+id/project_list_add_button"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="@string/project_list_add_project"
            android:gravity="center"
            android:background="@color/default_primary"
            style="@style/BottomButtonFullExpand"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/activity_drawer"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"></ListView>

    <RelativeLayout
        android:id="@+id/activity_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ProgressBar
            android:indeterminateBehavior="cycle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
