<resources>

    <!-- Base application theme. -->
    <style name="CosplayStuffTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/main_purple_light</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/main_purple</item>
        <item name="colorPrimary">@color/main_purple</item>
        <item name="colorPrimaryDark">@color/main_purple_dark</item>
    </style>

    <style name="Components">
        <item name="colorPrimary">@color/main_purple</item>
        <item name="colorPrimaryDark">@color/main_purple_dark</item>
        <item name="colorAccent">@color/main_purple</item>
    </style>

</resources>
